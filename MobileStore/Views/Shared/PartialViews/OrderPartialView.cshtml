@model OrderViewModel

<div class="form-group mb-3">
    <label for="brand" class="mb-2">Имя покупателя</label>
    <input asp-for="Username" 
           type="text" 
           class="form-control" 
           id="brand" placeholder="Имя">
    <span class="text-danger" asp-validation-for="Username"></span>
</div>
<div class="form-group mb-3">
    <label for="title" class="mb-2">Адрес доставки</label>
    <input asp-for="Address"
           type="text"
           class="form-control"
           id="title"
           placeholder="Адрес">
    <span class="text-danger" asp-validation-for="Address"></span>
    
</div>
<div class="form-group mb-3">
    <label for="price" class="mb-2">Номер телефона</label>
    <input asp-for="ContactPhone"
           type="text"
           class="form-control"
           id="price"
           placeholder="+7">
        <span class="text-danger" asp-validation-for="ContactPhone"></span>
</div>
<div class="form-group mb-3">
    <label for="phone-title" class="mb-2">Смартфон :</label>
    <input disabled asp-for="ShortPhone.Title" value="@Model.ShortPhone.Title" class="form-control" id="phone-title">
    <input hidden asp-for="@Model.ShortPhone.Id" value="@Model.ShortPhone.Id" class="form-control">
</div>