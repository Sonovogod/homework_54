@model FeedBackViewModel

@{
    ViewBag.Title = "Добавить отзыв";
    Layout = "_Layout";
}

<h2>Заполните поля для добавления комментария</h2>
<div class="row">
    <div class="phone_add_form col-md-6">
        <form asp-action="CreateReview" method="post">
            <div class="form-floating">
                <select asp-for="Grade"
                        class="form-select" id="floatingSelect"
                        aria-label="Floating label select example">
                    @for (var i = 1; i < 6; i++)
                    {
                        <option value="@i">@i</option>
                    }
                </select>
                <label for="floatingSelect">Оцените товар</label>
                <span class="text-danger" asp-validation-for="Grade"></span>
            </div>
            <div class="form-group mb-3">
                <label for="name" class="mb-2">Как Вас зовут?</label>
                <input asp-for="UserName"
                       type="text"
                       class="form-control"
                       id="name"
                       placeholder="Укажите имя">
                <span class="text-danger" asp-validation-for="UserName"></span>
            </div>
            <div class="form-group mb-3">
                <label for="price" class="mb-2">Добавьте комментарий</label>
                <textarea asp-for="Comments"
                       type="text"
                       class="form-control"
                       id="price"
                       placeholder="Расскажите о своих впечатлениях"></textarea>
                <span class="text-danger" asp-validation-for="Comments"></span>
            </div>
            <input asp-for="PhoneId" value="@Model.PhoneId" type="hidden">
            <button type="submit" class="btn btn-outline-info mt-3">Добавить</button>
        </form>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}